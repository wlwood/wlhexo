<article class="<%= post.layout %>">
  <header>
    <% if (post.layout != 'page'){ %>
      <div class="icon"></div>
      <%- partial('post/date', { date_format: config.date_format }) %>
    <% } %>
    <%- partial('post/title') %>
  </header>
  <% if (post.photos && post.photos.length > 0){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="entry">
    <% if (post.excerpt && index){ %>
      <%- post.excerpt %>
    <% } else { %>
      <%- post.content %>
    <% } %>
  </div>
  <center><font color='#a44a54' size='2px'>(转载文章请注明原文出处 <a href="<%- page.permalink %>" style='font-color:#496b98'><%= config.pTitle %>'s 博客 </a>)</font></center>
  <footer<% if (index) { %> class="end-sep"<% } %>>
    <% if (index){ %>
      <% if (post.excerpt){ %>
        <div class="alignleft" style="float:left;">
          <a href="<%- config.root %><%- post.path %>#more" class="more-link"><%= __('excerpt_title') %></a>
        </div>
      <% } %>
      <% if (theme.duoshuo_shortname){ %>
      <div class="alignright" style="text-align:right">
		<a href="<%- config.root %><%- post.path %>" class="ds-thread-count comment-link alignright" data-thread-key="<%- post.path %>" data-count-type="comments"></a>
      </div>
      <% } %>
    <% } else { %>
      <%- partial('post/category') %>
      <%- partial('post/tag') %>
    <% } %>
    <div class="clearfix"></div>
  </footer>
</article>

<%- partial('comment') %>
